# Environment variables for local development
# Copy this file to .env.local and fill in the secrets for your environment.

# --- Frontend (Vite) ---
# Base URL for the backend API. For local dev this should point to the Express server.
VITE_API_BASE_URL=http://localhost:3001/api

# --- Server ---
# Node environment: development | production | test
NODE_ENV=development

# Express port
PORT=3001

# CORS: Allowed origin for the frontend app making requests with credentials
CORS_ORIGIN=http://localhost:5173

# JWT secret used to sign auth tokens (REQUIRED in production)
JWT_SECRET=change-me-in-production

# 32+ bytes secret for encrypting stored API keys
ENCRYPTION_KEY=please-change-me-and-keep-long

# Optional: default OpenAI API key (only used if user has not configured their own)
OPENAI_API_KEY=

# --- Document processing limits (sane defaults) ---
PDF_EXTRACTOR=
PDF_MAX_PAGES=40
PDF_MAX_TEXT_CHARS=250000
DOC_MAX_TEXT_CHARS=300000
DOC_MAX_CHUNKS=200


